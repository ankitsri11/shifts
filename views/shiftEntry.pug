html
  head
    title Shifts
    link(href='/css/shiftEntry.css', rel='stylesheet', type='text/css')
  body
    h1 Shifts
    form(name="shiftEntry", method="post")
      div.inputs
        label(for="dateEntry") Event date/time:
        input(
          type="text",
          name="dateEntry"
          placeholder="October 22 2016 from 11:36:21 to 12:34:43")

      div.actions
        input(type="submit", value="Get events")
